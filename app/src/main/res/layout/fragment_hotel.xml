<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_4"
    android:paddingLeft="@dimen/space_8"
    android:paddingRight="@dimen/space_8"
    android:paddingTop="@dimen/space_4">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:drawableLeft="@drawable/hotel"
                    android:gravity="center"
                    android:text="Hotels" />

                <TextView
                    style="@style/text_secondary"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_8"
                    android:text="Sanya 50000 ( 2016-08-04 to 2016-08-09 )" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/hotel_pic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_8"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_normal"
                        android:layout_marginTop="@dimen/space_24"
                        android:text="Yuhai International Resort" />

                    <TextView
                        style="@style/text_secondary"
                        android:text="Sanya 163 detour" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_normal"
                        android:text="Deluxe rooms (including Western breakfast )" />

                    <TextView
                        style="@style/text_secondary"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="Three | three early | Free internet" />
                </LinearLayout>

                <Button
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="+" />

                <TextView
                    style="@style/text_secondary"
                    android:padding="8dp"
                    android:text="1" />

                <Button
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="-" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

