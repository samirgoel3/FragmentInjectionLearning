<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="64dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/imageView"
        android:background="@drawable/message_right_bg"
        android:gravity="center_vertical"
        android:minHeight="42dp"
        android:minWidth="80dp">


        <TextView
            android:id="@+id/item_message_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:textColor="#fff"
            tools:text="fafdife fjiadofafdife fjiadofafdife fjiadofafdife fjiadofafdife fjiadofafdife fjiadofafdife fjiado" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_b" />
</RelativeLayout>